{
  "version": 2,
  "builds": [
    {
      "src": "api/auth.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/login.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/register.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/verify.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/resend.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/forgot-password.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/reset-password.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/auth/register",
      "dest": "/api/auth/register.js"
    },
    {
      "src": "/api/auth/verify",
      "dest": "/api/auth/verify.js"
    },
    {
      "src": "/api/auth/resend-code",
      "dest": "/api/auth/resend.js"
    },
    {
      "src": "/api/auth/forgot-password",
      "dest": "/api/auth/forgot-password.js"
    },
    {
      "src": "/api/auth/reset-password",
      "dest": "/api/auth/reset-password.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/admin",
      "dest": "/public/admin.html"
    },
    {
      "src": "/dashboard",
      "dest": "/public/dashboard.html"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
